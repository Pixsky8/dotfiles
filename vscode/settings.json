{
  // Global settings
  "files.eol": "\n",
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "env-*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
    "**/venv": true
  },
  "files.exclude": {
    "**/*.o": true,
    "*.sublime-*": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "env*": true,
    "venv": true
  },

  // Terminal settings
  "terminal.integrated.shell.linux": "/usr/bin/zsh",

  // Graphical settings
  "nightswitch.dayTheme": "Tokyo Night Light",
  "nightswitch.nightTheme": "Moonlight II",
  "nightswitch.sunrise": "8:00",
  "nightswitch.sunset": "18:00",
  "workbench.colorCustomizations": {
    /*"terminal.background":"#202f5c",
    "terminal.foreground":"#ffffff",
    "terminalCursor.background":"#000000",
    "terminalCursor.foreground":"#ffffff",
    "terminal.ansiBlack":"#d1d1d1",
    "terminal.ansiBlue":"#0d2f78",
    "terminal.ansiBrightBlack":"#665C54",
    "terminal.ansiBrightBlue":"#82ccdb",
    "terminal.ansiBrightCyan":"#8BA59B",
    "terminal.ansiBrightGreen":"#00c74c",
    "terminal.ansiBrightMagenta":"#8F4673",
    "terminal.ansiBrightRed":"#FB543F",
    "terminal.ansiBrightWhite":"#FDF4C1",
    "terminal.ansiBrightYellow":"#FAC03B",
    "terminal.ansiCyan":"#12afec",
    "terminal.ansiGreen":"#95C085",
    "terminal.ansiMagenta":"#8F4673",
    "terminal.ansiRed":"#FB543F",
    "terminal.ansiWhite":"#A89984",
    "terminal.ansiYellow":"#FAC03B",*/
    "editorRuler.foreground": "#ff9100"
  },
  "workbench.sideBar.location": "left",
  "editor.cursorBlinking": "smooth",
  "editor.fontSize": 15,
  "editor.fontFamily": "DejaVu Sans Mono, monospace, consolas, Hack",
  "git.autofetch": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.renderWhitespace": "boundary",
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.colorTheme": "Moonlight II",
  "workbench.tree.indent": 14,
  "window.zoomLevel": 0,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",

  // C / C++ config
  "clang-format.executable": "clang-format-11",
  "C_Cpp.default.cStandard": "c99",
  "C_Cpp.suggestSnippets": false,
  "C_Cpp.updateChannel": "Insiders",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "/usr/include/glib-2.0",
    "/usr/include/gtk-3.0/*",
    "/usr/include/glib-2.0/*",
    "/usr/include/pango-1.0/*",
    "/usr/include/cairo/*",
    "/usr/include/gtk-3.0/gdk/*",
    "/usr/include/gtk-3.0/gdk-pixbuf/*",
    "/usr/include/*",
    "/usr/include/gtk-3.0",
    "/usr/include/at-spi2-atk/2.0",
    "/usr/include/at-spi-2.0",
    "/usr/include/dbus-1.0",
    "/usr/lib/x86_64-linux-gnu/dbus-1.0/include",
    "/usr/include/gtk-3.0",
    "/usr/include/gio-unix-2.0",
    "/usr/include/cairo",
    "/usr/include/libdrm",
    "/usr/include/pango-1.0",
    "/usr/include/harfbuzz",
    "/usr/include/pango-1.0",
    "/usr/include/fribidi",
    "/usr/include/atk-1.0",
    "/usr/include/cairo",
    "/usr/include/pixman-1",
    "/usr/include/freetype2",
    "/usr/include/libpng16",
    "/usr/include/gdk-pixbuf-2.0",
    "/usr/include/libmount",
    "/usr/include/blkid",
    "/usr/include/uuid",
    "/usr/include/glib-2.0",
    "/usr/lib/x86_64-linux-gnu/glib-2.0/include",
    "${default}"
  ],
  "C_Cpp.default.cppStandard": "c++17",
}
